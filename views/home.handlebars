  <!-- Jumbotron -->
  <div class="container mt-5">
    <div class="jumbotron text-center">
      <h1 class="display-4">Welcome to Simple Social</h1>
      <p class="lead">Welcome back to simple.</p>
    </div>
  </div>

  <!-- Main Content -->
  <main class="container-fluid d-flex flex-column">
    {{#if logged_in}}
      <!-- CREATE POST -->
      <div class="card post-card mb-4" style="margin-top: 5rem;">
        <div class="card-body">
          <h3 class="card-title">Create a post</h3>
          <p class="card-text">Let your friends know what you're up to!</p>
          <form id="post-form">
            <div class="input-group mb-3">
              <textarea class="form-control" name="content" placeholder="What's on your mind?" aria-label="Example text with button addon" aria-describedby="button-addon1" rows="1" required></textarea>
              <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon1">Post</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <!-- END CREATE POST -->

      <!-- SCROLLABLE POSTS SECTION -->
      <div class="scrollable-posts flex-grow-1">
        {{#each posts}}
          <div class="card post-card mb-4">
            <div class="card-body">
              <h3 class="card-title">{{this.user.email}}</h3>
              <p class="card-text">{{this.content}}</p>
              <small class="text-muted">{{format_date this.createdAt}}</small>
            </div>
          </div>
        {{/each}}
      </div>
      <!-- END SCROLLABLE POSTS SECTION -->
    {{else}}
      <div class="alert alert-warning text-center" role="alert">
        You need to <a href="/login" class="alert-link">login</a> to see the posts.
      </div>
    {{/if}}
  </main>

  <!-- Footer -->
  <footer class="bg-light p-3 mt-auto fixed-bottom">
